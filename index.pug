doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Sturing
    link(rel="shortcut icon", href="assets/favicon.png", type="image/x-icon")
    style.
      *,
      *::after,
      *::before {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI',
          Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue',
          sans-serif;
      }

      body {
        min-height: 100dvh;
        background-color: #000;
        --primary-color: #0ff;
      }

      .container {
        position: fixed;
        inset: 0;
        animation: efectoEstelar 30s linear infinite alternate;
      }

      .container-to45 {
        background: repeating-linear-gradient(
          45deg,
          transparent 0 30px,
          var(--primary-color) 31px 33px
        );
      }

      .container-to-45 {
        background: repeating-linear-gradient(
          -45deg,
          transparent 0 30px,
          var(--primary-color) 31px 33px
        );
      }

      @keyframes efectoEstelar {
        0%,
        100% {
          transform: scale(1);
        }

        50% {
          transform: scale(3);
        }

        70% {
          transform: scale(1.3);
        }
      }
  body
    .container.container-to45
    .container.container-to-45
